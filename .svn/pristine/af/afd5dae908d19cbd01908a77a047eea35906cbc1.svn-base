<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >

<TextView
    android:id="@+id/emailIdPassenger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Dude"
  
    android:textSize="20dp" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/sourceAddressPassenger"
    android:layout_alignBottom="@+id/sourceAddressPassenger"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="22dp"
    android:text="From  " />

<TextView
    android:id="@+id/sourceAddressPassenger"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/emailIdPassenger"
    android:layout_marginLeft="14dp"
    android:layout_toRightOf="@+id/textView1"
    android:text="Dude"
  
    android:textSize="15dp" />

</RelativeLayout>