<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color" >

     <EditText
         android:id="@+id/sourceField"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/buttonSubmit"
         android:layout_below="@+id/chat_message"
         android:layout_marginTop="46dp"
         android:layout_toLeftOf="@+id/buttonCurrentLocation"
         android:hint="Source" />

     <TextView
         android:id="@+id/chat_message"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/buttonLogout"
         android:layout_marginTop="34dp"
         android:text="You are at  " />
     
     <TextView
         android:id="@+id/textCurrentLocation"
         android:layout_width="200dp"
         android:layout_height="50dp"
         android:layout_alignBaseline="@+id/chat_message"
         android:layout_alignBottom="@+id/chat_message"
         android:layout_alignParentRight="true"
         android:layout_marginLeft="30dp"
         android:layout_toRightOf="@+id/chat_message"
         android:text="TextView"
          />

     

     <EditText
         android:id="@+id/destinationField"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/sourceField"
         android:layout_below="@+id/sourceField"
         android:layout_centerVertical="true"
         android:layout_marginTop="18dp"
         android:layout_toLeftOf="@+id/buttonCurrentLocation"
         android:ems="10"
         android:hint="Where To "
         android:singleLine="true"
         android:imeOptions="actionNext"
          >

        
     </EditText>

    

     <Button
         android:id="@+id/buttonSubmit"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_below="@+id/destinationField"
         android:layout_marginTop="20dp"
         android:layout_toRightOf="@+id/chat_message"
         android:text="Find Me a Ride !!" 
        />

     <Button
         android:id="@+id/buttonCurrentLocation"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/chat_message"
         android:layout_marginTop="48dp"
         android:layout_toRightOf="@+id/buttonSubmit"
         android:text="Use Current Location"
         android:textSize="13dp" />
    
</RelativeLayout>