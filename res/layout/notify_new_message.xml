<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/notify_new_message">

    <Button
        android:id="@+id/buttonShowMessage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/notifyMessageName"
        android:text="Button" />

    <TextView
        android:id="@+id/notifyMessageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonShowMessage"
        android:layout_alignBottom="@+id/buttonShowMessage"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:text="TextView" />

</RelativeLayout>